@model IEnumerable<PtixiakiReservations.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<div class="container mx-auto px-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">All Users</h1>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white rounded-lg shadow-md overflow-hidden">
            <thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
            <tr>
                <th class="py-3 px-6 text-left">First Name</th>
                <th class="py-3 px-6 text-left">Last Name</th>
                <th class="py-3 px-6 text-left">Phone Number</th>
                <th class="py-3 px-6 text-left">Email</th>
                <th class="py-3 px-6 text-center">Details</th>
                <th class="py-3 px-6 text-center">Change Role</th>
            </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
            @foreach (var item in Model)
            {
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-6 text-left">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td class="py-3 px-6 text-left">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td class="py-3 px-6 text-left">
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td class="py-3 px-6 text-left">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="py-3 px-6 text-center">
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:underline">Details</a>
                    </td>
                    <td class="py-3 px-6 text-center">
                        <a asp-action="ChangeRole" asp-route-id="@item.Id" class="text-blue-600 hover:underline">Change Role</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>