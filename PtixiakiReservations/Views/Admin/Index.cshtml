@model dynamic

@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container px-4 mx-auto my-10">
    <h1 class="text-3xl font-semibold text-gray-800 dark:text-gray-100 mb-8">Admin Dashboard Overview</h1>

    <div class="grid lg:grid-cols-4 md:grid-cols-2 gap-6">
        <!-- Venues Card -->
        <a asp-controller="Venue" asp-action="Index" class="block">
            <div class="bg-blue-100 dark:bg-blue-900 rounded-xl shadow p-6 hover:shadow-lg transition ease-in-out duration-200">
                <h2 class="text-xl font-semibold text-blue-800 dark:text-blue-200">Venues</h2>
                <p class="text-4xl font-bold text-blue-700 dark:text-blue-100">@Model.VenueCount</p>
                <span class="inline-block mt-2 text-sm text-blue-500 underline">Manage Venues →</span>
            </div>
        </a>

        <!-- Events Card -->
        <a asp-controller="Events" asp-action="Index" class="block">
            <div class="bg-green-100 dark:bg-green-900 rounded-xl shadow p-6 hover:shadow-lg transition ease-in-out duration-200">
                <h2 class="text-xl font-semibold text-green-800 dark:text-green-200">Events</h2>
                <p class="text-4xl font-bold text-green-700 dark:text-green-100">@Model.EventCount</p>
                <span class="inline-block mt-2 text-sm text-green-500 underline">Manage Events →</span>
            </div>
        </a>

        <!-- SubAreas Card -->
        <a asp-controller="SubAreas" asp-action="Index" class="block">
            <div class="bg-yellow-100 dark:bg-yellow-900 rounded-xl shadow p-6 hover:shadow-lg transition ease-in-out duration-200">
                <h2 class="text-xl font-semibold text-yellow-800 dark:text-yellow-200">Sub Areas</h2>
                <p class="text-4xl font-bold text-yellow-700 dark:text-yellow-100">@Model.SubAreaCount</p>
                <span class="inline-block mt-2 text-sm text-yellow-500 underline">Manage Sub Areas →</span>
            </div>
        </a>

        <!-- Reservations Card -->
        <a asp-controller="Reservation" asp-action="Index" class="block">
            <div class="bg-red-100 dark:bg-red-900 rounded-xl shadow p-6 hover:shadow-lg transition ease-in-out duration-200">
                <h2 class="text-xl font-semibold text-red-800 dark:text-red-200">Reservations</h2>
                <p class="text-4xl font-bold text-red-700 dark:text-red-100">@Model.ReservationCount</p>
                <span class="inline-block mt-2 text-sm text-red-500 underline">Manage Reservations →</span>
            </div>
        </a>
    </div>
</div>