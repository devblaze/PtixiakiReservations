@model PtixiakiReservations.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Edit Event</h1>

    <div class="bg-white shadow-md rounded-lg overflow-hidden mb-6">
        <div class="p-6">
            <form asp-action="EditEvent">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                        <span asp-validation-for="Name" class="text-sm text-red-500"></span>
                    </div>
                    
                    <div>
                        <label asp-for="EventTypeId" class="block text-sm font-medium text-gray-700 mb-1">Event Type</label>
                        <select asp-for="EventTypeId" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" asp-items="ViewBag.EventTypeId"></select>
                        <span asp-validation-for="EventTypeId" class="text-sm text-red-500"></span>
                    </div>
                    
                    <div>
                        <label asp-for="StartDateTime" class="block text-sm font-medium text-gray-700 mb-1">Start Date & Time</label>
                        <input asp-for="StartDateTime" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                        <span asp-validation-for="StartDateTime" class="text-sm text-red-500"></span>
                    </div>
                    
                    <div>
                        <label asp-for="EndTime" class="block text-sm font-medium text-gray-700 mb-1">End Date & Time</label>
                        <input asp-for="EndTime" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                        <span asp-validation-for="EndTime" class="text-sm text-red-500"></span>
                    </div>
                    
                    <div>
                        <label asp-for="VenueId" class="block text-sm font-medium text-gray-700 mb-1">Venue</label>
                        <select asp-for="VenueId" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" asp-items="ViewBag.VenueId"></select>
                        <span asp-validation-for="VenueId" class="text-sm text-red-500"></span>
                    </div>
                </div>
                
                <div class="mt-6 flex space-x-3">
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                        Save Changes
                    </button>
                    <a asp-action="Events" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition-colors">
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}