@model IEnumerable<PtixiakiReservations.Models.Venue>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "All Venues";
}

<h1 class="text-3xl font-bold text-center mb-8 text-gray-800">All Venues</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var item in Model)
    {
        var photopath = "~/images/" + (item.imgUrl ?? "noimage.jpg");
        <div class="bg-white shadow-md rounded-lg overflow-hidden border border-gray-200">
            <img class="w-full h-40 object-cover" src=@photopath asp-append-version="true" alt="Venue Image" />

            <div class="p-4">
                <!-- Venue Name -->
                <h3 class="text-lg font-semibold text-gray-800 mb-2">
                    @Html.DisplayFor(modelItem => item.Name)
                </h3>

                <!-- Venue Details -->
                <p class="text-sm text-gray-600 mb-4">
                    <span class="block">@Html.DisplayFor(modelItem => item.City.Name)</span>
                    <span class="block">@Html.DisplayFor(modelItem => item.Address)</span>
                    <span class="block">@Html.DisplayFor(modelItem => item.PostalCode)</span>
                    <span class="block">@Html.DisplayFor(modelItem => item.Phone)</span>
                </p>

                <!-- Actions -->
                <div class="flex justify-between items-center mt-4">
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-500 hover:underline font-medium">Details</a>
                    <a asp-action="Edit" asp-controller="Venue" asp-route-venuemodel="@item" class="text-blue-500 hover:underline font-medium">Edit</a>
                </div>
            </div>
        </div>
    }
</div>