@model PtixiakiReservations.Models.Seat

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-2xl font-bold text-gray-800 mb-4">Delete</h1>

<h3 class="text-lg text-gray-700 mb-6">Are you sure you want to delete this?</h3>

<div class="bg-white p-6 rounded-lg shadow-md space-y-4">
    <h4 class="text-gray-600 font-semibold">Table</h4>
    <hr class="border-gray-300" />

    <dl class="grid grid-cols-3 gap-y-4 text-sm">
        <dt class="font-medium text-gray-500">Name</dt>
        <dd class="col-span-2 text-gray-800">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete" class="space-y-4">
        <!-- Hidden ID Field -->
        <input type="hidden" asp-for="Id" />

        <!-- Delete and Back to List Buttons -->
        <div class="flex items-center space-x-4">
            <button type="submit"
                    class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md shadow-sm">
                Delete
            </button>
            <a asp-action="Index" asp-controller="Home"
               class="inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded-md shadow-sm">
                Back to List
            </a>
        </div>
    </form>
</div>