@model PtixiakiReservations.Models.Seat

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-2xl font-bold text-gray-800 mb-4">Edit</h1>

<h4 class="text-lg font-semibold text-gray-600 mb-4">Seat</h4>
<hr class="mb-6 border-gray-300" />

<div class="bg-white max-w-md mx-auto p-6 shadow-sm rounded-lg">
    <form asp-action="Edit" class="space-y-4">
        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

        <!-- Hidden ID Field -->
        <input type="hidden" asp-for="Id" />

        <!-- Name Input -->
        <div class="form-group">
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
            <input asp-for="Name" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <!-- Buttons -->
        <div class="form-group flex justify-between items-center">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md shadow-sm">
                Save
            </button>
            <a asp-action="Index" asp-controller="Home" class="text-gray-700 hover:text-gray-900">
                Back to List
            </a>
        </div>
    </form>
</div>