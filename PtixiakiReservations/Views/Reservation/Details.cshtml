@model PtixiakiReservations.Models.Reservation

@{
    ViewData["Title"] = "Reservation Details";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Reservation Details</h1>

    <div class="bg-white shadow-md rounded-lg overflow-hidden mb-6">
        <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
            <h4 class="text-xl font-semibold text-gray-700">Reservation Information</h4>
        </div>

        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- User Info Section -->
                <div class="col-span-1 md:col-span-3 bg-blue-50 rounded-lg p-4">
                    <h5 class="font-medium text-blue-700 mb-3">Customer Information</h5>
                    <div class="flex items-center space-x-2">
                        <span class="font-medium text-gray-700">Name:</span>
                        <a href="@Url.Action("Details", "ApplicationUser", new { id = Model.ApplicationUser.Id })"
                           class="text-blue-600 hover:text-blue-800 hover:underline">
                            @Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName
                        </a>
                    </div>
                </div>

                <!-- Event Info Section -->
                <div class="bg-gray-50 rounded-lg p-4">
                    <h5 class="font-medium text-gray-700 mb-3">Event Details</h5>
                    <div class="space-y-2">
                        <div>
                            <span class="font-medium text-gray-700">Event:</span>
                            <span class="text-gray-800">@Model.Event.Name</span>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">Date:</span>
                            <span class="text-gray-800">@Model.Date.ToString("MMM dd, yyyy - h:mm tt")</span>
                        </div>
                    </div>
                </div>

                <!-- Venue Info Section -->
                <div class="bg-gray-50 rounded-lg p-4">
                    <h5 class="font-medium text-gray-700 mb-3">Venue Details</h5>
                    <div class="space-y-2">
                        <div>
                            <span class="font-medium text-gray-700">Venue:</span>
                            <a href="@Url.Action("Details", "Venue", new { id = Model.Seat.SubArea.Venue.Id })"
                               class="text-blue-600 hover:text-blue-800 hover:underline">
                                @Model.Seat.SubArea.Venue.Name
                            </a>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">Area:</span>
                            <span class="text-gray-800">@Model.Seat.SubArea.AreaName</span>
                        </div>
                    </div>
                </div>

                <!-- Seat Info Section -->
                <div class="bg-gray-50 rounded-lg p-4">
                    <h5 class="font-medium text-gray-700 mb-3">Seat Information</h5>
                    <div class="space-y-2">
                        <div>
                            <span class="font-medium text-gray-700">Seat:</span>
                            <span class="text-gray-800">@Model.Seat.Name</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="flex space-x-4">
        <a href="@Url.Action("Index", "Home")"
           class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-md text-gray-700 transition-colors">
            Back to Home
        </a>
    </div>
</div>