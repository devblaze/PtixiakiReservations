@model IEnumerable<PtixiakiReservations.Models.EventType>
@{
    ViewBag.Title = "Index";
}

<div class="container mx-auto p-6">
    <h2 class="text-2xl font-bold text-gray-800">Index</h2>
    <div id="calender" class="mt-4 p-4 border border-gray-300 rounded-lg shadow-md"></div>

    <!-- Modal -->
    <div id="myModal" class="fixed inset-0 z-50 hidden bg-gray-800 bg-opacity-75 flex items-center justify-center">
        <div class="bg-white rounded-lg shadow-lg w-full max-w-lg">
            <div class="border-b border-gray-200 px-4 py-3">
                <h4 class="text-lg font-semibold"><span id="eventTitle"></span></h4>
                <button type="button" class="text-gray-400 hover:text-gray-600 absolute top-4 right-4"
                        onclick="closeModal('myModal')">
                    &times;
                </button>
            </div>
            <div class="p-4 text-gray-700">
                <p id="pDetails"></p>
            </div>
            <div class="border-t border-gray-200 px-4 py-3">
                <button class="px-4 py-2 bg-blue-500 text-white rounded shadow hover:bg-blue-700"
                        onclick="closeModal('myModal')">
                    Close
                </button>
            </div>
        </div>
    </div>

    <!-- Custom Recurrence Modal -->
    <div id="myModalRepeatTime"
         class="fixed inset-0 z-50 hidden bg-gray-900 bg-opacity-50 flex items-center justify-center">
        <div class="bg-white rounded-lg shadow-lg w-full max-w-2xl">
            <div class="bg-gray-100 border-b border-gray-200 px-4 py-3 flex justify-between items-center">
                <h4 class="text-lg font-bold text-gray-800">Custom Recurrence</h4>
                <button type="button" class="text-gray-500 hover:text-red-500"
                        onclick="closeModal('myModalRepeatTime')">
                    &times;
                </button>
            </div>
            <div class="p-6 space-y-4">
                <div class="form-group">
                    <label class="block font-medium text-gray-700">Repeat Every:</label>
                    <div class="flex items-center space-x-2">
                        <input id="numOfRepeat" type="number" min="1" value="1"
                               class="w-16 border border-gray-300 rounded px-2 py-1 text-gray-700" />
                        <select id="selectRepeat"
                                class="border border-gray-300 rounded px-3 py-2 text-gray-700">
                            <option value="Week">Week</option>
                            <option value="Day">Day</option>
                            <option value="Month">Month</option>
                        </select>
                    </div>
                </div>
                <div class="form-group show-week">
                    <span class="block font-medium text-gray-700">Repeat On:</span>
                    <div class="flex space-x-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="su">
                            <label class="form-check-label text-gray-600">S</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="m">
                            <label class="form-check-label text-gray-600">M</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="tu">
                            <label class="form-check-label text-gray-600">T</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="w">
                            <label class="form-check-label text-gray-600">W</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="th">
                            <label class="form-check-label text-gray-600">T</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="f">
                            <label class="form-check-label text-gray-600">F</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="sa">
                            <label class="form-check-label text-gray-600">S</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <span class="block font-medium text-gray-700">Until:</span>
                    <input type="date" id="untilDate"
                           class="block w-full border border-gray-300 rounded px-2 py-1 text-gray-700" />
                </div>
                <div class="form-group">
                    <span class="block font-medium text-gray-700">After:</span>
                    <div class="flex items-center space-x-2">
                        <input type="number" id="afterNumTimes" min="1"
                               class="w-16 border border-gray-300 rounded px-2 py-1 text-gray-700" />
                        <span class="text-gray-600">occurrences</span>
                    </div>
                </div>
            </div>
            <div class="bg-gray-100 border-t border-gray-200 px-4 py-3 flex justify-end space-x-4">
                <button class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600"
                        onclick="closeModal('myModalRepeatTime')">
                    Close
                </button>
                <button id="saveRepeatTime"
                        class="px-4 py-2 bg-blue-500 text-white rounded shadow hover:bg-blue-700">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Example toggle function for modals
    function closeModal(modalId) {
        document.getElementById(modalId).classList.add('hidden');
    }
</script>