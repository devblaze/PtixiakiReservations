@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <!-- Card container -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <!-- Header with gradient background -->
            <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-8 md:px-10">
                <h1 class="text-2xl font-bold text-white">@ViewData["Title"]</h1>
                <p class="mt-2 text-blue-100">
                    Enter your email address and we'll send you a link to reset your password.
                </p>
            </div>

            <!-- Form section -->
            <div class="px-6 py-8 md:px-10">
                <form method="post" class="space-y-6">
                    <!-- Validation summary -->
                    <div asp-validation-summary="All" class="text-sm text-red-600 bg-red-50 p-4 rounded-md"></div>

                    <!-- Email input -->
                    <div>
                        <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Email address</label>
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                </svg>
                            </div>
                            <input asp-for="Input.Email"
                                   class="pl-10 block w-full pr-3 py-2 rounded-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 text-gray-900"
                                   placeholder="you@example.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="mt-1 text-xs text-red-600"></span>
                    </div>

                    <!-- Actions -->
                    <div class="flex items-center justify-between pt-2">
                        <a href="/Identity/Account/Login" class="text-sm text-indigo-600 hover:text-indigo-500">
                            Return to login
                        </a>
                        <button type="submit"
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            Send Reset Link
                        </button>
                    </div>
                </form>
            </div>

            <!-- Footer with helpful info -->
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 md:px-10">
                <p class="text-xs text-gray-500">
                    Having trouble? Contact our support team at <a href="mailto:support@example.com" class="text-indigo-600 hover:text-indigo-500">support@example.com</a>
                </p>
            </div>
        </div>

        <!-- Security note -->
        <div class="mt-6 text-center">
            <p class="text-xs text-gray-500 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                Your information is secure with us
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}