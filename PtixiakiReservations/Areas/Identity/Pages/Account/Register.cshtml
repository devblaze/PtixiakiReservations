@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mx-auto mt-10 px-4">
    @* <h1 class="text-2xl font-bold text-center text-gray-800 dark:text-white mb-8">@ViewData["Title"]</h1> *@

    <div class="max-w-lg mx-auto bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4">
            <h4 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">Create a new account</h4>

            <hr class="border-gray-200 dark:border-gray-700" />

            <div asp-validation-summary="All" class="text-sm text-red-500 mb-4"></div>

            <!-- Email Field -->
            <div class="form-group">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                <input asp-for="Input.Email" class="block w-full mt-1 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none transition duration-200 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200" />
                <span asp-validation-for="Input.Email" class="text-xs text-red-500"></span>
            </div>

            <!-- First Name -->
            <div class="form-group">
                <label asp-for="Input.FirstName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">First Name</label>
                <input asp-for="Input.FirstName" class="block w-full mt-1 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none transition duration-200 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200" />
                <span asp-validation-for="Input.FirstName" class="text-xs text-red-500"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <label asp-for="Input.LastName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Last Name</label>
                <input asp-for="Input.LastName" class="block w-full mt-1 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none transition duration-200 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200" />
                <span asp-validation-for="Input.LastName" class="text-xs text-red-500"></span>
            </div>

            <!-- Phone -->
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Phone Number</label>
                <input asp-for="Input.PhoneNumber" class="block w-full mt-1 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none transition duration-200 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200" />
                <span asp-validation-for="Input.PhoneNumber" class="text-xs text-red-500"></span>
            </div>

            <!-- City -->
            <div class="form-group">
                <label asp-for="Input.CityId" class="block text-sm font-medium text-gray-700 dark:text-gray-300">City</label>
                <input id="cityName" class="block w-full mt-1 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none transition duration-200 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200" />
                <input type="hidden" asp-for="Input.CityId" id="cityId" />
                <span asp-validation-for="Input.CityId" class="text-xs text-red-500"></span>
            </div>

            @* <!-- Address --> *@
            @* <div class="form-group"> *@
            @*     <label asp-for="Input.Address" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Address</label> *@
            @*     <input asp-for="Input.Address" class="block w-full mt-1 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none transition duration-200 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200" /> *@
            @*     <span asp-validation-for="Input.Address" class="text-xs text-red-500"></span> *@
            @* </div> *@
            @* *@
            @* <!-- Postal Code --> *@
            @* <div class="form-group"> *@
            @*     <label asp-for="Input.PostalCode" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Postal Code</label> *@
            @*     <input asp-for="Input.PostalCode" class="block w-full mt-1 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none transition duration-200 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200" /> *@
            @*     <span asp-validation-for="Input.PostalCode" class="text-xs text-red-500"></span> *@
            @* </div> *@

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
                <input asp-for="Input.Password" type="password" class="block w-full mt-1 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none transition duration-200 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200" />
                <span asp-validation-for="Input.Password" class="text-xs text-red-500"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="block w-full mt-1 px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none transition duration-200 bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-xs text-red-500"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="block w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-200 focus:ring focus:ring-blue-200">
                Register
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function() {
            $("#cityName").autocomplete({
                source: function(request, response) {
                    $.ajax({
                        url: "@Url.Action("SearchCities", "ApplicationUser")",
                        dataType: "json",
                        data: {
                            term: request.term
                        },
                        success: function(data) {
                            response($.map(data, function(item) {
                                return {
                                    label: item.value,
                                    value: item.value,
                                    id: item.id
                                };
                            }));
                        }
                    });
                },
                minLength: 2,
                select: function(event, ui) {
                    $("#cityId").val(ui.item.id);
                    return true;
                }
            });
        });
    </script>
}